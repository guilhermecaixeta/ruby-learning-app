<section class="container-sm container-md container-lg row mb-3">
  <p id="notice"><%= notice %></p>
  <h1><%= Kind.model_name.human(count: 2) %></h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @kinds.each do |kind| %>
        <tr>
          <td><%= kind.description %></td>
          <td><%= link_to t('Nav.Menu-item.Show'), kind, class: "btn btn-outline-info" %></td>
          <td><%= link_to t('Nav.Menu-item.Edit'), edit_kind_path(kind), class: "btn btn-outline-secondary" %></td>
          <td><%= link_to t('Nav.Menu-item.Destroy'), kind, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
<section class="row">
  <p>
    <%= paginate @kinds %>
  </p>
</section>
<br>
<section class="row mb-3">
  <p>
    <%= link_to "#{t 'Nav.Menu-item.New'} #{Kind.model_name.human}" , new_kind_path, class: "btn btn-primary" %>
  </p>
</section>
