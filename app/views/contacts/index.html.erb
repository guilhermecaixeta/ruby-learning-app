<%= render partial:"/shared/header" %>
<article class="basic-grey">
  <section>
    <p id="notice"><%= notice %></p>
    <h2><%= Contact.model_name.human(count: 2) %></h2>
    <table>
      <thead>
        <tr>
          <th><%=Contact.human_attribute_name("name")%></th>
          <th><%=Contact.human_attribute_name("email")%></th>
          <th><%=Contact.human_attribute_name("kind")%></th>
          <th><%=Contact.human_attribute_name("rmk")%></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= contact.name %></td>
            <td><%= contact.email %></td>
            <td><%= contact.kind.description %></td>
            <td><%= contact.rmk %></td>
            <td><%= link_to t('Nav.Menu-item.Show'), contact %></td>
            <td><%= link_to t('Nav.Menu-item.Edit'), edit_contact_path(contact) %></td>
            <td><%= link_to t('Nav.Menu-item.Destroy'), contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
  <br>
  <section>
    <p>
      <%= paginate @contacts %>
    </p>
  </section>
  <br>
  <section>
    <p>
      <%= link_to "#{t 'Nav.Menu-item.New'} #{Contact.model_name.human}" , new_contact_path, class: "button" %>
    </p>
  </section>
  <br>
  <%= render partial:"/shared/footer" %>
</article>
