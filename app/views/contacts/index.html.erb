<section class="container-sm container-md container-lg row mb-3">
  <p id="notice"><%= notice %></p>
  <h2><%= Contact.model_name.human(count: 2) %></h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%=Contact.human_attribute_name("name")%></th>
        <th><%=Contact.human_attribute_name("email")%></th>
        <th><%=Contact.human_attribute_name("kind")%></th>
        <th><%=Contact.human_attribute_name("rmk")%></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.email %></td>
          <td><%= contact.kind.description %></td>
          <td><%= contact.rmk %></td>
          <td><%= link_to t('Nav.Menu-item.Show'), contact, class: "btn btn-outline-info" %></td>
          <td><%= link_to t('Nav.Menu-item.Edit'), edit_contact_path(contact), class: "btn btn-outline-secondary" %></td>
          <td><%= link_to t('Nav.Menu-item.Destroy'), contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
<section class="row mb-3">
  <p>
    <%= paginate @contacts %>
  </p>
</section>
<br>
<section class="row mb-3">
  <p>
    <%= link_to "#{t 'Nav.Menu-item.New'} #{Contact.model_name.human}" , new_contact_path, class: "btn btn-primary" %>
  </p>
</section>
