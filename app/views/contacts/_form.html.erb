<%= form_with(model: contact, local: true, class: "basic-grey") do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :kind_id %><br>
    <%= collection_select(:contact, :kind_id, @kinds, :id, :description) %>
  </div>

  <div class="field">
    <%= form.label :rmk %>
    <%= form.text_area :rmk %>
    </div>

  <div class="actions">
    <% if action_name == 'new'  %>
      <%= form.submit "Send", class: "button" %>
    <% else %>
      <%= link_to 'Show', @contact, class: "button" %>
    <% end %>
    <%= link_to 'Back', contacts_path, class: "button" %>
  </div>
<% end %>
