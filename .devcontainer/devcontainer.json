{
  "name": "LearningApp",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/app",
  "customizations": {
    "vscode": {
      "extensions": ["shopify.ruby", "shopify.ruby-lsp", "sorbet.ruby-sorbert", "ali-ariff.erb-formatter/beautify", "castwide.ruby-solargraph"]
    }
  },
  "remoteUser": "root",
  "containerUser": "vscode",
  "forwardPorts": [
    3000,
    5432
  ],
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "notify",
      "protocol": "http",
      "elevateIfNeeded": true
    }
  },
  "postCreateCommand": "chmod +x /app/.devcontainer/post-create.sh && /app/.devcontainer/post-create.sh"
}